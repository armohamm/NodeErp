div.contactEditContainer
    div.widgetPanel
        div.widgetHead
            h2= title
        div.widgetContent

            form(method="post", action="/contact/"+contact._id)
                fieldset
                    ul
                        li


                            div.widgetRow80
                                label Name:
                                input.round(type="text", name="contact[name]", value=contact.name)
                        li
                            div.widgetRow80
                                label Surname:
                                input.round(type="text", name="contact[surname]", value=contact.surname)

                        li
                            input(type="hidden", name="contact[_id]", value=contact._id)
                            input(type='submit', value='Submit')
                            &nbsp;
                            input(type='submit', value='Cancel')
